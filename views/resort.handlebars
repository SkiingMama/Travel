    <section class="resortSection">
        <h1>{{resortName}}</h1>
        <div class="resortRow1">
            <div id="resortPics">
                {{#if photo1}}
                  <img src="{{photo1}}" alt="{{resortName}}" />
                {{/if}}
                <div class="slider"></div>
            </div>
            <div class="resortInfo">
                <h2>Resort Details</h2>
                <p>{{description}}</p>
            </div>
        </div>
    </section>

    <section class="resortSection2">
        <h1>Resort Opportunities</h1>
        <div class="resortRow2">
            <div id="resortOpp">
                <!-- box -->
            </div>
            <div class="googleMap">
                <ul class="resortDetails">
                    <li><span>Airport:</span> {{closestAirport}}</li>
                    <li><span>Address:</span> {{address}}</li>
                    <li><span>Phone:</span><a href="tel:{{phoneNumber}}">{{phoneNumber}}</a></li>
                    <li><span>Website:</span><a href="{{website}}" target="_blank">Website</a></li>
                </ul>
            </div>
        </div>
    </section>